# Application Environment
# Options: development, production, testing
APP_ENV=development

# Server Configuration
MACHINE_ID=1
SERVER_NAME=LingFramework
SERVER_DESC=LingFramework Server
SERVER_URL=http://localhost:7072
SERVER_LOGO=
SERVER_TERMS_URL=

# Database Configuration
DB_DRIVER=sqlite
DSN=./ling.db
# For MySQL: mysql://user:password@tcp(localhost:3306)/dbname
# For PostgreSQL: postgres://user:password@localhost:5432/dbname?sslmode=disable

# Server Address and Mode
ADDR=:7072
MODE=development

# API Prefixes
DOCS_PREFIX=/api/docs
API_PREFIX=/api
ADMIN_PREFIX=/admin
AUTH_PREFIX=/auth
MONITOR_PREFIX=/metrics

# Session Configuration
SESSION_SECRET=your-secret-key-change-in-production
SESSION_EXPIRE_DAYS=7
API_SECRET_KEY=your-api-secret-key-change-in-production

# Logging Configuration
LOG_LEVEL=info
LOG_FILENAME=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=5
LOG_DAILY=true

# LLM Configuration
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# Search Configuration
SEARCH_ENABLED=false
SEARCH_PATH=./search
SEARCH_BATCH_SIZE=100

# Language Configuration
LANGUAGE_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *

# Cache Configuration
CACHE_TYPE=local
# Redis Configuration (when CACHE_TYPE=redis)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_IDLE_TIMEOUT=5m
# Local Cache Configuration (when CACHE_TYPE=local)
LOCAL_CACHE_MAX_SIZE=1000
LOCAL_CACHE_DEFAULT_EXPIRATION=5m
LOCAL_CACHE_CLEANUP_INTERVAL=10m

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# Storage Configuration
# Options: local, qiniu, cos, minio, oss, s3
STORAGE_KIND=local

# Local Storage Configuration
UPLOAD_DIR=./uploads
MEDIA_PREFIX=/uploads

# Qiniu Cloud Storage Configuration
QINIU_ACCESS_KEY=
QINIU_SECRET_KEY=
QINIU_BUCKET=
QINIU_DOMAIN=
QINIU_PRIVATE=false
QINIU_REGION=

# Tencent Cloud COS Configuration
COS_SECRET_ID=
COS_SECRET_KEY=
COS_REGION=
COS_BUCKET_NAME=
COS_DOMAIN=

# MinIO / S3 Compatible Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=lingframework
MINIO_USE_SSL=false
MINIO_PUBLIC_BASE=

# Alibaba Cloud OSS Configuration
OSS_ENDPOINT=
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=
OSS_DOMAIN=
OSS_USE_HTTPS=true

# Amazon S3 Configuration
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_ENDPOINT=
S3_USE_PATH_STYLE=false
S3_DOMAIN=

